@model bloggie.web.Models.viewModels.HomeView

@{
    ViewData["Title"] = "Home Page";
}
<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-1 fw-bold lh-1 mb-3">
                Bloggie-Dev Blogs
            </h1>
            <p class="lead">
                Bloggie is the game to coding blogs covering a vast range of topics like Html,Css,C#,.net Mvc,Angular etc.
                Want to read the latest dev articles? join the bloggie app and get weekely blogs in ur email.
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/326503/pexels-photo-326503.jpeg?auto=compress&cs=tinysrgb&w=600~/css/"
                 alt="Bloggie-Dev Blogs"
                 class="d-block mx-lg-auto img-fluid" width="300" />
        </div>
    </div>
</div>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 d-flex">
            @if(Model != null)
            {
                foreach (var tag in Model.Tags)
                {
                    <span class="badge bg-dark me-1">
                       @tag.Name
                    </span>
                    
                }
            }

        </div>
            
    </div>
</div>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (Model != null && Model.BlogPosts.Any())
            {
                foreach (var blogPost in Model.BlogPosts)
                {

                    Console.WriteLine("blogPost check", blogPost);

                    <div class="mb-5 bg-light box-shadow p-5">
                        <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading"
                             class="mb-4 d-block img-fluid" />
                        <h2 class="mb-4">@blogPost.Heading</h2>
                        <p class="mb-2">
                            Author:@blogPost.Author
                            <br />

                            Published Date:@blogPost.PublishedDate.ToShortDateString()
                        </p>
                        <p class="mb-4">
                            @foreach (var tag in blogPost.Tags)
                            {
                                Console.WriteLine("blogPost data", blogPost);
                                <span class="badge bg-secondary">@tag.Name</span>
                            }
                        </p>
                        <p class="mb-4">@blogPost.ShortDescription</p>
                        <a class="btn btn-secondary"
                           asp-area=""
                           asp-controller="Blogs"
                           asp-action="Index"
                           asp-route-urlHandle="@blogPost.UrlHandle">Read More</a>

                    </div>

                }
            }

        </div>
    </div>
</div>
